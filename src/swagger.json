                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "user name sample",
                                    "email": "usersample@email.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "id": {
                                            "type": "string"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "date"
                                        },
                                        "updated_at": {
                                            "type": "date"
                                        }
                                    },
                                    "example": {
                                        "admin": false,
                                        "id": "asd123s-34sw-2fs2-ad21-aqw34t45h675",
                                        "name": "User name sample",
                                        "email": "usersample@email.com",
                                        "created_at": "2022-05-31T22:10:32.992Z",
                                        "updated_at": "2022-05-31T22:10:32.992Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "O email já está sendo utilizado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "This email is already in use."
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
